{
    "name": "theeifeltower",
    "version": "1.0.0",
    "description": "The Eiffel Tower Project",
    "main": "index.js",
    "scripts": {
        "sass": "node-sass sass/main.scss css/style.css -w",
        "server": "live-server --browser=firefox",
        "start": "npm-run-all --parallel server sass",
        "compile:sass": "node-sass sass/main.scss css/style.comp.css",
        "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.comp.css -o css/style.css",
        "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
        "build": "npm-run-all compile:sass prefix:css"
    },
    "author": "Stanislav",
    "license": "ISC",
    "devDependencies": {
        "autoprefixer": "^9.6.1",
        "concat": "^1.0.3",
        "node-sass": "^4.12.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^6.1.3",
        "sass": "^1.20.1"
    }
}
